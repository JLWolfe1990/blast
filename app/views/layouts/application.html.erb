<!DOCTYPE html>
<html>
<head>
  <title>Blast</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-1 nav-left">
        <% if current_user %>
          <div class="slide-menu">
            <ul>
              <li onclick="toggleSlideMenu()"><i class="fa fa-ellipsis-h fa-2x"></i></li>
              <li><i class="fa fa-sign-out fa-2x" onclick="logout('<%= destroy_user_session_path() %>')"></i><div class="menu-label">Sign Out</div></li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="col-xs-11">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
