<!DOCTYPE html>
<html>
<head>
  <title>Blast</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-1 nav-left">
        <div class="slide-menu">
          <div style="float:right; width: 20px; height: 1px;"></div>
          <i class="fa fa-ellipsis-h fa-2x" onclick="toggleSlideMenu()"></i>
          <div style="clear:both;"></div>
          <% if current_user %>
            <div style="float:right; width: 15px; height: 1px;"></div>
            <%= link_to destroy_user_session_path(),method: :delete do %><i class="fa fa-sign-out fa-2x"></i><% end %>
            <div class="menu-label">sign out</div>
          <% else %>
            <div style="float:right; width: 20px; height: 1px;"></div>
            <%= link_to new_user_session_path() do %><i class="fa fa-sign-in fa-2x"></i><% end %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-11">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
